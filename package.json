{
	"name": "hono-api",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"lint": "eslint \"src/**/*.ts\" \"drizzle.config.ts\" --cache",
		"lint:fix": "eslint \"src/**/*.ts\" \"drizzle.config.ts\" --fix",
		"cf-typegen": "wrangler typesc",
		"db:generate": "drizzle-kit generate",
		"db:seed": "wrangler d1 execute hono-api-db --file=seed.sql",
		"db:push:local": "wrangler d1 migrations apply hono-api-db",
		"db:push:remote": "wrangler d1 migrations apply hono-api-db --remote"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.3",
		"@hono/zod-openapi": "^1.2.1",
		"@libsql/client": "^0.17.0",
		"@noble/hashes": "^1.8.0",
		"@paralleldrive/cuid2": "^3.3.0",
		"drizzle-orm": "^0.45.1",
		"drizzle-zod": "^0.8.3",
		"hono": "^4.11.7"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260203.0",
		"@eslint/js": "^9.39.2",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"globals": "^17.3.0",
		"typescript-eslint": "^8.55.0",
		"wrangler": "^4.4.0"
	}
}
