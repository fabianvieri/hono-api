{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"@api/*": ["src/api/*"],
			"@core/*": ["src/core/*"],
			"@schemas/*": ["src/schemas/*"]
		},
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	}
}
